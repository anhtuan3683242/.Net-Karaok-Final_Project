@model QuanLyKaraoke.Models.Booking
@{
    ViewBag.Title = "Order";
}

@*Reviewing Order List*@
@*Get bảng order detail để lấy số lượng, liên kết tới bảng menu để lấy tên và mã món ăn*@
<h1>@ViewBag.Title</h1>
<section>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col"><strong>P101</strong> </th>
                <th scope="col"><strong>Name</strong></th>
                <th scope="col"><strong>Quantity</strong></th>
                <th scope="col"><strong>Price</strong></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Heniken</td>
                <td>10</td>
                <td>20$</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Water</td>
                <td>10</td>
                <td>10$</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Tiger</td>
                <td>10</td>
                <td>50$</td>
            </tr>
        </tbody>
        <tfoot class="thead-light">
            <tr>
                <th scope="col">Total</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col">80$</th>
            </tr>
        </tfoot>
    </table>
</section>
<br />

@*ViewBag đỗ danh sách các món ăn và giá*@

<section>

    <h3> Add to order list</h3>

    <form class="form-inline">
        <div class="form-group mb-2">
            <div class="row-fluid">
                <select class="selectpicker" data-show-subtext="true" data-live-search="true">

                    @*Load data menu to here*@
                    <option data-subtext="2$">Heniken</option>
                    <option data-subtext="1$">Water</option>
                    <option data-subtext="5$">Tiger</option>
                    <option data-subtext="10$">Fruit set 1</option>
                    <option data-subtext="10$">Fruit set 2"</option>
                    @*IF it out of stock => disable*@
                    <option data-subtext="1$" disabled="disabled">Snack</option>
                </select>

            </div>
        </div>

        <div class="form-group mx-sm-3 mb-2">
            <div class="col-10">
                <input class="form-control" type="number" value="1" id="example-number-input">
            </div>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Add</button>
    </form>

</section>


